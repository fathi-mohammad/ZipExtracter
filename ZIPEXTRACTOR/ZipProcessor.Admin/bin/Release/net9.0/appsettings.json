{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=zipdb;User=zipuser;Password=zippass;AllowPublicKeyRetrieval=True;"
  },
  "WorkerSettings": {
    "BaseApiPort": 8080
  },

  "Services": [
    {
      "Name": "Worker1 - Zip Analyzer",
      "Type": "Exe",
      "ExePath": "D:\\Tools\\Workers\\ZipAnalyzer\\ZipProcessor.Worker.exe",
      "Image": "zip-analyzer:latest",
      "DefaultPort": 8081,
      "Inputs": [
        {
          "Key": "WorkerSettings:BatchSize",
          "Label": "Batch Size",
          "Type": "int",
          "Default": "10"
        },
        {
          "Key": "WorkerSettings:MaxParallel",
          "Label": "Max Parallel",
          "Type": "int",
          "Default": "2"
        },
        {
          "Key": "WorkerSettings:DelayMilliseconds",
          "Label": "Delay (ms)",
          "Type": "int",
          "Default": "1000"
        },
        {
          "Key": "ApiSettings:BaseUrl",
          "Label": "API Base URL",
          "Type": "string",
          "Default": "http://localhost:5000/api/process"
        },
        {
          "Key": "ApiSettings:WorkerUrl",
          "Label": "Worker URL",
          "Type": "string",
          "Default": "http://0.0.0.0:8085"
        }
      ]
    },
    {
      "Name": "Worker2 - Logging Worker",
      "Type": "Exe",
      "ExePath": "D:\\Tools\\Workers\\LoggingWorker\\WorkerService1.exe",
      "Image": "logging-worker:latest"
    },
    {
      "Name": "Worker3 - Light Processor",
      "Type": "Exe",
      "ExePath": "D:\\Tools\\Workers\\light-processor.exe",
      "Image": "light-processor:latest"
    }
  ]
}
